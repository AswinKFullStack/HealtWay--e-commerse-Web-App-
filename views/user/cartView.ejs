<%- include("../../views/partials/user/header") %>
<link rel="stylesheet" href="/css/userCss/cart.css">
    <!-- Cart Section -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">Your Shopping Cart</h2>
        <div class="row">
            <!-- Cart Items -->
            <div class="col-md-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Product 1</h5>
                        <div class="d-flex align-items-center">
                            <img src="images/RagiP.jpg" class="img-fluid" alt="Product 1" width="150">
                            <div class="ml-3">
                                <h6 class="mb-1">Natural Health Food</h6>
                                <p class="text-muted">Price: <strong>$25.00</strong></p>
                                <div class="quantity-control">
                                    <button class="btn btn-light btn-sm" onclick="updateQuantity('product1', -1)">-</button>
                                    <input type="text" id="product1" value="1" class="form-control d-inline quantity-input" readonly>
                                    <button class="btn btn-light btn-sm" onclick="updateQuantity('product1', 1)">+</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Product 2</h5>
                        <div class="d-flex align-items-center">
                            <img src="images/payarpodi_page-0001.jpg" class="img-fluid" alt="Product 2" width="150">
                            <div class="ml-3">
                                <h6 class="mb-1">Organic Supplement</h6>
                                <p class="text-muted">Price: <strong>$45.00</strong></p>
                                <div class="quantity-control">
                                    <button class="btn btn-light btn-sm" onclick="updateQuantity('product2', -1)">-</button>
                                    <input type="text" id="product2" value="1" class="form-control d-inline quantity-input" readonly>
                                    <button class="btn btn-light btn-sm" onclick="updateQuantity('product2', 1)">+</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Product 3</h5>
                        <div class="d-flex align-items-center">
                            <img src="images/mulak podi 14by14-1_page-0001.jpg" class="img-fluid" alt="Product 3" width="150">
                            <div class="ml-3">
                                <h6 class="mb-1">Fitness Gear</h6>
                                <p class="text-muted">Price: <strong>$60.00</strong></p>
                                <div class="quantity-control">
                                    <button class="btn btn-light btn-sm" onclick="updateQuantity('product3', -1)">-</button>
                                    <input type="text" id="product3" value="1" class="form-control d-inline quantity-input" readonly>
                                    <button class="btn btn-light btn-sm" onclick="updateQuantity('product3', 1)">+</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <ul class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Subtotal</span>
                                <strong>$130.00</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Tax (10%)</span>
                                <strong>$13.00</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Total</span>
                                <strong id="totalPrice">$143.00</strong>
                            </li>
                        </ul>
                        <button class="btn btn-primary btn-block">Proceed to Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../../views/partials/user/footer") %>
    <script src="/js/userJs/cart.js"></script>