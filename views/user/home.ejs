<%- include("../../views/partials/user/header") %>
<link rel="stylesheet" href="/css/userCss/home.css">

<!-- Current Offers Section -->
<div class="container mt-4">
    <div class="alert alert-success text-center" role="alert">
        <h4 class="alert-heading">Special Offers!</h4>
        <p>Don't miss out on our limited-time discounts! Click the button below to view all current offers.</p>
        <button class="btn btn-success" onclick="location.href='/offers'">View All Offers</button>
    </div>
</div>

<!-- Product Section -->
<div class="container mt-4">
    <h2 class="text-center">Our Products</h2>
    <div class="row">
        <% products.forEach(function(product) { %> 
        <div class="col-md-4">
            <div class="card position-relative">
                <% if (product.productImages && product.productImages.length > 0) { %>
                <a href="/product/view/<%= product._id %>">
                    <img src="/uploads/re-image/<%= product.productImages[0] %>" alt="<%= product.productName %> Image" class="card-img-top">
                </a>
                <% } else { %>
                <a href="/product/view/<%= product._id %>">
                    <img src="/path-to-placeholder-image.jpg" class="card-img-top" alt="Product Image">
                </a>
                <% } %>

                <div class="position-absolute top-0 end-0 p-2">
                    <button class="btn btn-light" onclick="location.href='/product/addWishlist/<%= product._id %>'">
                        <i class="bi bi-heart"></i>
                    </button>
                </div>
                
                <div class="card-body">
                    <a href="/product/view/<%= product._id %>">
                        <h5 class="card-title"><%= product.productName %></h5>
                    </a>
                    <p class="card-text">₹<%= product.salePrice %></p>
                    <button class="btn btn-success" onclick="location.href='/product/addCart/<%= product._id %>'">Add to Cart</button>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<!-- Pagination for Our Products -->
<div class="container text-center mt-4">
    <nav aria-label="Product Page navigation">
        <ul class="pagination justify-content-center">
            <% for (let i = 1; i <= productTotalPages; i++) { %>
            <li class="page-item <%= productCurrentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?productPage=<%= i %>&search=<%= searchTerm %>"><%= i %></a>
            </li>
            <% } %>
        </ul>
    </nav>
</div>

<!-- Dynamic Product Categories -->
<div class="container my-5">
    <h2 class="text-center">Product Categories</h2>

    <% Object.keys(categoryProducts).forEach(function(categoryName) { %>
        <h3 class="my-4"><%= categoryName %></h3>
        <div class="row">
            <% categoryProducts[categoryName].products.forEach(function(product) { %>
            <div class="col-md-4">
                <div class="card position-relative">
                    <a href="/product/view/<%= product._id %>">
                        <img src="/uploads/re-image/<%= product.productImages[0] %>" class="card-img-top" alt="<%= product.productName %> Image">
                    </a>
                    <div class="position-absolute top-0 end-0 p-2">
                        <button class="btn btn-light" onclick="location.href='/product/addWishlist/<%= product._id %>'">
                            <i class="bi bi-heart"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <a href="/product/view/<%= product._id %>">
                            <h5 class="card-title"><%= product.productName %></h5>
                        </a>
                        <p class="card-text">₹<%= product.salePrice %></p>
                        <button class="btn btn-success" onclick="location.href='/product/addCart/<%= product._id %>'">Add to Cart</button>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <!-- Pagination for each category -->
        <div class="container text-center mt-4">
            <nav aria-label="Category Page navigation">
                <ul class="pagination justify-content-center">
                    <% for (let i = 1; i <= categoryProducts[categoryName].totalPages; i++) { %>
                    <li class="page-item <%= categoryProducts[categoryName].currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?categoryPage_<%= categoryProducts[categoryName].currentPage %>=<%= i %>"><%= i %></a>
                    </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    <% }); %>
</div>

<%- include("../../views/partials/user/footer") %>



